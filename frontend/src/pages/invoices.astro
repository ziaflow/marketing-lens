---
import Layout from '../layouts/Layout.astro';

// Access the tenant ID injected by middleware
const { tenantId } = Astro.locals;

// Mock Data for Invoices
const invoices = [
  { id: 'INV-2024-001', date: '2024-01-15', amount: 1250.00, status: 'PAID', fileUrl: '#' },
  { id: 'INV-2024-002', date: '2024-02-15', amount: 3400.00, status: 'PAID', fileUrl: '#' },
  { id: 'INV-2024-003', date: '2024-03-15', amount: 2800.50, status: 'PENDING', fileUrl: '#' },
];
---

<Layout title="Invoices | Marketing Lens">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-xl font-semibold text-gray-900">Invoices</h1>
        <p class="mt-2 text-sm text-gray-700">A list of all invoices for tenant <span class="font-mono font-bold text-deep-azure">{tenantId}</span>.</p>
      </div>
    </div>
    <div class="mt-8 flex flex-col">
      <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Invoice #</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Amount</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                  <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                {invoices.map((invoice) => (
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{invoice.id}</td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{invoice.date}</td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">${invoice.amount.toFixed(2)}</td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <span class={`inline-flex rounded-full px-2 text-xs font-semibold leading-5 ${invoice.status === 'PAID' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}`}>
                        {invoice.status}
                      </span>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-2">
                      <a href={invoice.fileUrl} class="text-deep-azure hover:text-deep-azure-hover">Download</a>
                      <button onclick={`alert('Triggering Email for ${invoice.id}')`} class="text-gray-600 hover:text-gray-900 bg-gray-100 hover:bg-gray-200 px-3 py-1 rounded-md transition-colors text-xs">
                        Email to Me
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
