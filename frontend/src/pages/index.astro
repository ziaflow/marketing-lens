---
import Layout from '../layouts/Layout.astro';

// Access the tenant ID injected by middleware
const { tenantId } = Astro.locals;
---

<Layout title="Dashboard | Marketing Lens">
	<div class="space-y-6">
		<div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
			<div class="md:grid md:grid-cols-3 md:gap-6">
				<div class="md:col-span-1">
					<h3 class="text-lg font-medium leading-6 text-gray-900">Performance Overview</h3>
					<p class="mt-1 text-sm text-gray-500">
						Real-time metrics for tenant: <span class="font-mono text-deep-azure">{tenantId}</span>
					</p>
				</div>
				<div class="mt-5 md:mt-0 md:col-span-2">
					<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
						<div class="bg-deep-azure-light overflow-hidden rounded-lg p-5">
							<dt class="truncate text-sm font-medium text-gray-500">Total Spend</dt>
							<dd class="mt-1 text-3xl font-semibold tracking-tight text-deep-azure">$12,450.00</dd>
						</div>
						<div class="bg-deep-azure-light overflow-hidden rounded-lg p-5">
							<dt class="truncate text-sm font-medium text-gray-500">Conversions</dt>
							<dd class="mt-1 text-3xl font-semibold tracking-tight text-deep-azure">842</dd>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="bg-white shadow sm:rounded-lg">
			<div class="px-4 py-5 sm:p-6">
				<h3 class="text-lg font-medium leading-6 text-gray-900">Intelligent Insights</h3>
				<div class="mt-2 max-w-xl text-sm text-gray-500">
					<p>AI-driven anomaly detection and recommendations.</p>
				</div>
				<div class="mt-5 border-t border-gray-200">
					<dl class="divide-y divide-gray-200">
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
							<dt class="text-sm font-medium text-gray-500">Anomaly Detected</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">CPA for 'Summer Campaign' spiked by 24% yesterday.</dd>
						</div>
						<!-- More items... -->
					</dl>
				</div>
			</div>
		</div>
	</div>
</Layout>
